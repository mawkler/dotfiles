[user]
	email  = melkerosterberg@gmail.com
	name   = Melker Ã–sterberg
[alias]
	co     = checkout
	s      = status
	p      = pull --autostash
	b      = branch
	c      = commit -v
	cm     = commit -vm
	ca     = commit -va
	cam    = commit -vam
	com    = "!if git rev-parse --quiet --verify master > /dev/null; then git checkout master; else git checkout main; fi"
	l      = log --decorate
	w      = whatchanged
	d      = diff
	diff1  = !git diff | delta --features=one-window
	g      = grep -ni
	u      = diff HEAD@{1} HEAD
	plog   = log --pretty=format:'%Cred%h%Creset %s -%C(yellow)%d%Creset %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lol    = log --graph --decorate --pretty=oneline --abbrev-commit
	subupd = submodule update --recursive --init
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	store  = config credential.helper store
	prune-local = !git checkout master && git branch -vv | grep 'origin/.*: gone]' | awk '{print $1}' | xargs git branch -d
	countlines = !git ls-files | xargs wc -l
	panic = pull --ff --rebase
	unique = !git log --graph \
		--pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' \
		--abbrev-commit \
		--date=relative \
		$1..$(git rev-parse --abbrev-ref HEAD)
	make = !make --directory $(git rev-parse --show-toplevel)
	ls = ls-tree -r HEAD --name-only
	pull-all = !ls -D | xargs -I {} sh -c 'echo "Doing git pull in {}..." && git -C {} pull'
	clone-private = clone --config user.email=melkerosterberg@gmail.com --config github.user=melkster
	clone-work = clone --config user.email=melker.osterberg@omegapoint.se --config github.user=melkerosterberg
	diff-branch = !git diff `git merge-base master HEAD` HEAD
[core]
	excludesfile = /home/melker/.gitignore-global
	pager = "if type delta &> /dev/null; then delta; else less; fi"
	eol = lf
[interactive]
    diffFilter = "if type delta &> /dev/null; then delta --color-only; else less; fi"
[delta]
	features = side-by-side line-numbers
	syntax-theme = Coldark-Dark
	plus-emph-style = white "#318e02"
	plus-style = syntax "#1b5100"
	minus-emph-style = white "#800000"
	minus-style = syntax "#500000"
[delta "one-window"]
	side-by-side = false
[github]
	user = melkster
[color]
	ui = true
[dude]
	interval = 10
[credential]
	helper = cache --timeout=1800
[pull]
	rebase = true
[rebase]
	autoStash = true
