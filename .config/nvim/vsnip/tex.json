{
  "cite": {
    "prefix": ["cite"],
    "body": [
      "\\cite{${1:source}}${2:. }"
    ],
    "description": "\\cite{}"
  },
  "autoref": {
    "prefix": ["autoref"],
    "body": [
      "\\autoref{${2:sec:${1:reference}}}$3"
    ],
    "description": "\\autoref{}"
  },
  "section": {
    "prefix": ["section"],
    "body": [
      "\\section{${1:section name}} \\label{sec:${2:${1/\\s/-/g}}}",
      "${0}"
    ],
    "description": "\\section"
  },
  "subsection": {
    "prefix": ["subsection"],
    "body": [
      "\\subsection{${1:subsection name}} \\label{sub:${2:${1/\\s/-/g}}}",
      "${0}"
    ],
    "description": "\\subsection"
  },
  "subsubsection": {
    "prefix": "subsubsection",
    "body": [
      "\\subsection{${1:subsubsection name}} \\label{ssub:${2:${1/\\s/-/g}}}",
      "${0}"
    ],
    "description": "\\subsubsection"
  }
}
